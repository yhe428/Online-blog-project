<div class="your-page-container">
    {{!-- <p> welcome! {{user.username}}</p> --}}
    <h2>Your Page &amp; Articles</h2>
  
   
     <div class="add-article-form">
        <h2> Add Article</h2>
        <form action="/submit-article" method="post" enctype="multipart/form-data">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
            <h3 class="category">Category:</h3>
            <div class="category-container">
                <label><input type="radio" name="category" value="nature">Nature</label>
                <label><input type="radio" name="category" value="portrait">Portrait</label>
                <label><input type="radio" name="category" value="life">Life</label>
            </div>
            <label for="content">Content:</label>
            <textarea id="editor-textarea" name="content" hidden></textarea>
            <div id="editor">
                <p>Article here</p>

            </div>

            <label for="image">Upload Image:</label>
            <input type="file" id="image" name="image" accept=".png,.jpg,.jpeg,.bmp,.gif">

            <button type="submit">Submit</button>
        </form>
     </div>
    
    {{#if toastMessage}}
    <p>{{toastMessage}}</p>
    {{/if}}
</div>